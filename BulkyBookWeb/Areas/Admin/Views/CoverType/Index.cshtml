@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="CoverType" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th class="bg-primary text-white">
                CoverType Name
            </th>
            <th class ="bg-primary text-white"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
        <tr>
            <td width="50%">
                @obj.Name
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a class="btn btn-primary bg mx-2" asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i>Edit</a>
                    <a class="btn btn-danger mx-2" asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i> Delte</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>