@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Company" asp-action="Upsert">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    <br /><br />


    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="bg-primary text-white">Name</th>
                <th class="bg-primary text-white">Address</th>
                <th class="bg-primary text-white">City</th>
                <th class="bg-primary text-white">State</th>
                <th class="bg-primary text-white">Phone Number</th>
                <th class="bg-primary text-white"></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}